<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.krunal3kapadiya.nlp_mlkit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GenerateSmartReplyActivity"
            android:label="@string/label_smart_reply"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TranslateTextActivity"
            android:label="@string/label_translate_text"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".IdentifyLanguageActivity"
            android:label="@string/label_identify_language"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AboutUsActivity"
            android:label="@string/about"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>